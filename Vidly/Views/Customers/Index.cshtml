@model IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (Model.Count() == 0)
{
    <p>There are not any customers.</p>
}
else
{ 
    <table class="table">
        <tr>
            <th>
                Customer
            </th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Details", new { id=item.Id }) 
            </td>
        </tr>
    }
    </table>
}